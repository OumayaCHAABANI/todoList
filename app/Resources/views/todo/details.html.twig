{% extends "base.html.twig" %}
{% block title %}{% endblock %}
{% block body %}

<a  class="btn btn-default" href="/todo/home"> Back To Todos </a>
<hr> 
<h2 class="page-header">{{todo.name}} </h2>
<ul class="list-group">
<li class="list-group-item"> Category: {{todo.category}}</li>
<li class="list-group-item"> Priority: {{todo.priority}}</li>
<li class="list-group-item"> Due: <strong> {{todo.dueDate|date('F,j,Y,g:i')}}</strong></li> 
</ul>
 <p> {{todo.description}} </p>




{% endblock %}